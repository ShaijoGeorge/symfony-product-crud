{% extends 'base.html.twig' %}
{% block title %}Product List{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-light">Product List</h2>
    <a href="{{ path('app_product_new') }}" class="btn btn-primary">Add New Product</a>
</div>
<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>No.</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ product.name }}</td>
                <td>Rs. {{ product.price }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary btn-sm">View</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                    {{ include('product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-center">No products found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
