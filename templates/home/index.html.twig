{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
    <div class="container text-center my-5">
        <h1 class="fw-bold text-light display-4">Welcome to Product Manager!</h1>
        <p class="lead text-secondary">A simple product management system built with Symfony.</p>

        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">View Products</h5>
                        <p class="text-muted">Browse the product list and view details.</p>
                        <a href="{{ path('app_product_index') }}" class="btn btn-primary">Go to Products</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">Add New Product</h5>
                        <p class="text-muted">Create a new product with just a few clicks.</p>
                        <a href="{{ path('app_product_new') }}" class="btn btn-primary">Add Product</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark fw-bold">Manage Products</h5>
                        <p class="text-muted">Edit or delete existing products easily.</p>
                        <a href="{{ path('app_product_index') }}" class="btn btn-primary">Manage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
